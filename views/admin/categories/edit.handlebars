<div class="row">

    <div class="col-sm-4">
        <h1>Edit Category</h1>
        <form action="/admin/categories/edit/{{category._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" value="{{category.name}}">
            </div>
            <button class="btn btn-primary">Submit Edit</button>
        </form>

    </div>

</div>