<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">Home
            <small>Secondary Text</small>
        </h1>
        {{#each posts}}
        <!-- Blog Post -->
        <div class="card mb-4">
            <img class="card-img-top" src="./upload/{{file}}" alt="Card image cap" height="500px" width="750px">
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
                <p class="card-text">{{body}}</p>
                <a href="/posts/{{_id}}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                Posted on {{generateTime date 'MMM Do YYYY'}}
                <a href="#">Start Bootstrap</a>
            </div>
        </div>
        {{/each}}

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
            {{#paginate current=current pages=pages}}{{/paginate}}
        </ul>

    </div>

    <!-- Sidebar Widgets Column -->
    {{> home/sidebar}}

</div>
<!-- /.row -->