<h1>All Posts</h1>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>File</th>
            <th>Title</th>
            <th>Category</th>
            <th>Status</th>
            <th>Allow Comments</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{_id}}</td>
            <td><img height="50px" src="/upload/{{file}}" alt=""></td>
            <td>{{title}}</td>
            <td>{{category.name}}</td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td>{{generateTime date 'MMM Do YYYY'}}</td>
            <td><a href="/admin/posts/edit/{{_id}}" class="btn btn-info">Edit</a></td>
            <td>
                <form action="/admin/posts/{{_id}}?_method=DELETE" method="POST">

                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>


</table>