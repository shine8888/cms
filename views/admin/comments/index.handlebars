<h1>Comments</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Owner</th>
            <th scope="col">Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each comments}}
        <tr>
            <th>{{_id}}</th>
            <td>{{user.firstName}}</td>
            <td>{{generateTime date 'MMM Do YYYY'}}</td>
            <td>
                <form action="/admin/comments/{{_id}}?_method=DELETE" method="POST">

                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>