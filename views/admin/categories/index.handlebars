<div class="col-sm-4">
    <form action="/admin/categories/create" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" placeholder="Enter Title" class="form-control">
        </div>
        <button class="btn btn-primary">Create Categories</button>
    </form>

</div>
<hr>
<br>

<div class="col-sm-8">
    <h1>Categories</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {{#each categories}}
            <tr>
                <td>{{_id}}</td>
                <td>{{name}}</td>
                <td>{{generateTime date 'MMM Do YYYY'}}</td>
                <td><a class="btn btn-info" href="/admin/categories/edit/{{_id}}">Edit</a></td>
                <td>
                    <form action="/admin/categories/delete/{{_id}}?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>